{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forum/nav.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    {% block stylesheets_form %}{% endblock %}
    {% block javascript_head %}{% endblock %}
{% endblock %}

{% block title %}Forum{% endblock %}


{% block body %}

            <div class="forum_nav">

                <div class="forum_liens">

                    <div class="forum_lien">
                        <a href="{{ path('forum') }}">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>

                    {% if category is defined %}

                        <div>
                            <i class="fas fa-arrow-circle-right"></i>
                        </div>
                        <div class="forum_lien">
                            <a href="{{ path('forum') }}/{{ category.id }}">
                                <i class="fas fa-folder"></i> {{ category.name }}
                            </a>
                        </div>

                    {% endif %}

                    {% if sub_category is defined %}

                        <div>
                            <i class="fas fa-arrow-circle-right"></i>
                        </div>
                        <div class="forum_lien">
                            <a href="{{ path('forum') }}/{{ category.id }}.{{ sub_category.id }}">
                                <i class="fas fa-comment"></i>  {{ sub_category.name }}
                            </a>
                        </div>

                    {% endif %}

                </div>

                {% if topic is not defined %}

                    <div class="forum_search">
                        <form method="POST" class="form_search">
                            <input class="textSearch" name="textSearch" type="search" placeholder="Rechercher" />
                            <input class="buttonSearch" name="buttonSearch" type="submit" value="Valider" />
                        </form>
                    </div>

                {% endif %}

            </div>

            {% block body_form %}{% endblock %}
{% endblock %}